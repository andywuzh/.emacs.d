{
  "name": "vue-language-server",
  "languageId": "vue",
  "command": [
    "vue-language-server",
    "--stdio"
  ],
  "settings": {
    "vue": {
      "server": {
        "maxNumberOfProblems": 100,
        "diagnostics": {
          "additionalRules": [
            {
              "rules": [
                {
                  "rule": "vue/no-multiple-template-root",
                  "severity": "off"
                }
              ]
            }
          ]
        }
      },
      "complete": {
        "componentData": {
          "maxFileSize": 1048576
        }
      },
      "format": {
        "enable": true,
        "options": {
          "tabSize": 2,
          "useTabs": false
        }
      }
    },
    "typescript": {
      "tsdk": "./node_modules/typescript/lib"
    }
  },
  "initializationOptions": {
    "typescript": {
      "tsdk": "./node_modules/typescript/lib"
    },
    "languageFeatures": {
      "completion": {
        "enable": true,
        "getDocumentNameCasesRequest": true,
        "getDocumentSelectionRequest": true
      },
      "definition": {
        "linkSupport": true
      },
      "typeDefinition": {
        "linkSupport": true
      },
      "codeLens": {
        "showReferencesNotification": true
      },
      "schemaRequestService": {
        "allow": true
      }
    }
  }
}